@model RegisterCustomerViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<div class="renderCard">
    <div class="card shadow border-0 rounded offset-2 col-8">
        <div class="card-header">
            <div class="row mt-2 text-center">
                <h2 class="text-info">Register</h2>
            </div>

            <div class="card-body p-0">
                <form method="post" asp-controller="Auth" asp-action="RegisterCustomer">
                    <div class="border p-3">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating py-2 col-12 mb-3">
                                    <input asp-for="FullName" class="form-control border-0 shadow rounded" />
                                    <label asp-for="FullName" class="ms-0"></label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating py-2 col-12 mb-3">
                                    <input id="emailInput" asp-for="Email" class="form-control border-0 shadow rounded" />
                                    <label asp-for="Email" class="ms-0"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-floating py-2 col-12 mb-3">
                                    <input asp-for="Phone" class="form-control border-0 shadow rounded" />
                                    <label asp-for="Phone" class="ms-0"></label>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating py-2 col-12 mb-3">
                                    <input asp-for="Address" class="form-control border-0 shadow rounded" />
                                    <label asp-for="Address" class="ms-0"></label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating py-2 col-12 mb-3">
                                    <input asp-for="Password" type="password" class="form-control border-0 shadow rounded" />
                                    <label asp-for="Password" class="ms-0"></label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating py-2 col-12 mb-3">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control border-0 shadow rounded" />
                                    <label asp-for="ConfirmPassword" class="ms-0"></label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>



                        <div class="row mt-3 mb-3">
                            <div class="col-6">
                                <button id="submitButton" type="submit" class="form-control btn btn-info shadow rounded">Register</button>
                            </div>
                            <div class="col-6 d-flex align-items-center">
                                <p class="text-info">Already have an Account? <a asp-controller="Auth" asp-action="Login">Login here</a></p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/validation.js"></script>
    <partial name="_ValidationScriptsPartial" />
    }
