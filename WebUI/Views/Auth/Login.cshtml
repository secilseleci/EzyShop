@model LoginViewModel 
 
@{
    ViewData["Title"] = "Login";
}

<div class="renderCard">
    <div class="card shadow border-0 rounded offset-3 col-6">
        <div class="card-header">
            <div class="row mt-2 text-center">
                <h2 class="text-info">Login</h2>
            </div>
        </div>
        <div class="card-body p-0">
            <form method="post" asp-controller="Auth" asp-action="Login">
                <div class="border p-3">
                    <div class="row">
                        <div class="form-floating py-2 col-12 mb-3">
                            <input id="emailInput" asp-for="Email" class="form-control border-0 shadow rounded" />
                            <label asp-for="Email" class="ms-0"></label>
                            <span asp-validation-for="Email" class="text-danger mt-2"></span>
                        </div>
                        <div class="form-floating py-2 col-12 mb-3">
                            <input asp-for="Password" class="form-control border-0 shadow rounded" />
                            <label asp-for="Password" class="ms-0"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" asp-for="RememberMe" /> Remember Me
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-6">
                            <button id="submitButton" type="submit" class="form-control btn btn-info shadow rounded">Login</button>
                        </div>
                       
                        <div class="">
                            <p class="text-info">Don't have an Account? <a asp-controller="Auth" asp-action="RegisterCustomer">Register</a></p>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

     }
}
