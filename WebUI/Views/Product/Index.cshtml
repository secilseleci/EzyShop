@{
    ViewData["Title"] = "Shop";
}

<div class="container mt-4">
    <div class="row">
        <!-- Sol: Filtre Alanı -->
        <div class="col-md-3">


            <div class="filter-container p-3 shadow bg-white rounded">
                <h5 class="text-center mb-3"><i class="bi bi-funnel-fill"></i> Filter Products</h5>

                <form id="productFilterForm">
                    <div class="form-group mb-2">
                        <label>Category</label>
                        <select id="category" class="form-control">
                            <option value="">All Categories</option>
                            
                        </select>
                    </div>

                    <div class="form-group mb-2">
                        <label>Color</label>
                        <input type="text" id="color" class="form-control" placeholder="Enter color">
                    </div>

                    <div class="form-group mb-2">
                        <label>Min Price</label>
                        <input type="number" id="minPrice" class="form-control">
                    </div>
                    <div class="form-group mb-2">
                        <label>Max Price</label>
                        <input type="number" id="maxPrice" class="form-control">
                    </div>

                    <div class="form-group mb-2">
                        <label>Product Name</label>
                        <input type="text" id="name" class="form-control" placeholder="Search by name">
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button id="filterButton" type="button" class="btn btn-success shadow">
                            <i class="bi bi-search"></i> Search
                        </button>
                        <button id="resetButton" type="button" class="btn btn-outline-secondary shadow">
                            <i class="bi bi-x-circle"></i> Reset
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Sağ: Ürün Kartları (AJAX ile doldurulacak) -->
        <div class="col-md-9" id="productCardContainer">
            <div class="text-center text-muted">
                <span class="spinner-border text-info"></span>
                <p>Loading products...</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/filter.js" asp-append-version="true"></script>
}
