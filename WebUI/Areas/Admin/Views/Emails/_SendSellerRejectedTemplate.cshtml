@model SendSellerEmailViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Seller Approved</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f8;
            padding: 20px;
        }

        .card {
            background-color: white;
            border-radius: 8px;
            padding: 24px;
            max-width: 600px;
            margin: auto;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .header {
            font-size: 20px;
            margin-bottom: 16px;
            color: #333;
        }

        .content {
            font-size: 16px;
            line-height: 1.6;
            color: #444;
        }

        .footer {
            margin-top: 24px;
            font-size: 14px;
            color: #888;
        }

        .password-box {
            background-color: #f0f0f0;
            padding: 10px;
            border-radius: 6px;
            font-family: monospace;
            font-size: 16px;
            display: inline-block;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="header">Hello @Model.Name!</div>

        <div class="content">
            <p>Your application has been reviewed by us and unfortunately has been rejected.</p>
            <p>You can call our call center for detailed information and consultancy.</p>
        </div>

        <div class="footer">
            This is an automated message. If you did not apply as a seller, please ignore this email.
        </div>
    </div>
</body>
</html>
