@model CategoryViewModel

@{
    ViewData["Title"] = "Create Category";
}

<div class="renderCard">
    <div class="card shadow border-0 rounded offset-2 col-8">
        <div class="card-header">
            <div class="row p-3">
                <h2 class="text-info">Create Category</h2>
            </div>
        </div>
        <div class="card-body p-0">
            <form method="post" asp-controller="Category" asp-action="Create" enctype="multipart/form-data">
                <div class="border p-3">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12 mb-3">
                                <input asp-for="Name" class="form-control border-0 shadow rounded" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <label asp-for="Name" class="ms-0"></label>
                            </div>
                        </div>
                    </div> 
                    <div class="col-md-6">
                        <div class="form-floating py-2 col-12 mb-3">
                            <input asp-for="ImageUrl" type="file" name="file" class="form-control border-0 shadow rounded" />
                            <label asp-for="ImageUrl" class="ms-0"></label>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-6">
                            <button type="submit" class="form-control btn btn-info shadow">Create</button>
                        </div>
                        <div class="col-6">
                            <a asp-controller="Category" asp-action="Index" class="form-control btn btn-outline-secondary shadow">Back To List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}