@model ShopDetailsDto


<div class="card shadow border-0 rounded">
    <div class="card-header">
        <div class="row p-3">
            <div class="col-6">
                <h2 class="text-info">Shop Details</h2>
            </div>
        </div>
    </div>

    <div class="modal-body px-4 pt-3">
        <div class="row mb-2">
            <div class="col-4 fw-semibold text-secondary">Shop Name</div>
            <div class="col-8">@Model.Name</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-semibold text-secondary">Seller</div>
            <div class="col-8">@Model.SellerName</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-semibold text-secondary">Email</div>
            <div class="col-8">@Model.Email</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-semibold text-secondary">Phone</div>
            <div class="col-8">@Model.Phone</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-semibold text-secondary">Tax Number</div>
            <div class="col-8">@Model.TaxNumber</div>
        </div>

        <div class="row mb-2">
            <div class="col-4 fw-semibold text-secondary">Address</div>
            <div class="col-8">@Model.Address</div>
        </div>
        <div class="row mb-2">
            <div class="col-4 fw-semibold text-secondary">Created At</div>
            <div class="col-8">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</div>
        </div>
    </div>
    <div class="modal-footer border-top-0 d-flex justify-content-end">

    @if (ViewBag.Status == "Pending")
    {
        <button class="btn btn-success me-2" onclick="approveShop('@Model.Id', '@Model.SellerId')">
            <i class="bi bi-check-circle me-1"></i> Approve
        </button>
        <button class="btn btn-danger" onclick="rejectShop('@Model.Id', '@Model.SellerId')">
            <i class="bi bi-x-circle me-1"></i> Reject
        </button>
    }

    else if (ViewBag.Status == "Active")
    {
        <button class="btn btn-warning" onclick="deactivateShop('@Model.Id', '@Model.SellerId')">
            <i class="bi bi-dash-circle me-1"></i> Deactivate
        </button>
    }
    else if (ViewBag.Status == "Inactive")
    {
        <button class="btn btn-success me-2" onclick="reactivateShop('@Model.Id', '@Model.SellerId')">
            <i class="bi bi-check-circle me-1"></i> Activate
        </button>
        <button class="btn btn-danger" onclick="deleteShop('@Model.Id', '@Model.SellerId')">
            <i class="bi bi-trash me-1"></i> Delete
        </button>
    }
    </div>

</div>
